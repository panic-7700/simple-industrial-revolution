		<description>Craft 200 .50 Ball cartridges.</description>
		<jobString>Making .50 Ball cartridges.</jobString>
		<researchPrerequisites>
			<li>CE_Gunpowder</li>
		</researchPrerequisites>		
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>28</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>WoodLog</li>
