<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<operations>

			<li Class="PatchOperationFindMod">
				<mods>
					<li>Combat Extended</li>
				</mods>
				<match Class="PatchOperationSequence">
					<operations>
						<li Class="PatchOperationFindMod">
							<mods>
								<li>Combat Extended</li>
							</mods>
							<match Class="PatchOperationSequence">
								<operations>
									<!--musket-->
									<li Class="PatchOperationFindMod">
										<mods>
											<li>Flintolcks Extended</li>
										</mods>
										<match Class="PatchOperationSequence">
											<operations>
												<li Class="PatchOperationAdd">
													<xpath>
														Defs/PawnKindDef[
														defName="ei_Infantry_line" or 
														defName="ei_Infantry_reserve"]</xpath>
													<value>
														<inventoryOptions>
															<skipChance>0</skipChance>
															<subOptionsChooseOne>
																<li>
																	<choiceChance>100</choiceChance>
																	<thingDef>Ammo_MusketBall</thingDef>
																	<countRange>
																		<min>55</min>
																		<max>66</max>
																	</countRange>
																</li>
															</subOptionsChooseOne>
														</inventoryOptions>
													</value>
												</li>
												<li Class="PatchOperationAdd">
													<xpath>
														Defs/PawnKindDef[defName="ei_Skirmisher"]</xpath>
													<value>
														<inventoryOptions>
															<skipChance>0</skipChance>
															<subOptionsChooseOne>
																<li>
																	<choiceChance>100</choiceChance>
																	<thingDef>Ammo_MusketBall</thingDef>
																	<countRange>
																		<min>70</min>
																		<max>80</max>
																	</countRange>
																</li>
															</subOptionsChooseOne>
														</inventoryOptions>
													</value>
												</li>
												<li Class="PatchOperationAdd">
													<xpath>
														Defs/PawnKindDef[defName="ei_Officer"]</xpath>
													<value>
														<inventoryOptions>
															<skipChance>0</skipChance>
															<subOptionsChooseOne>
																<li>
																	<choiceChance>100</choiceChance>
																	<thingDef>Ammo_MusketBall</thingDef>
																	<countRange>
																		<min>25</min>
																		<max>30</max>
																	</countRange>
																</li>
															</subOptionsChooseOne>
														</inventoryOptions>
													</value>
												</li>
												<li Class="PatchOperationAddModExtension">
													<xpath>Defs/PawnKindDef[
														defName="ei_Infantry_line" or 
														defName="ei_Infantry_reserve" or
														defName="ei_Skirmisher" or
														defName="ei_Officer"
														]</xpath>
													<value>
														<li
															Class="CombatExtended.LoadoutPropertiesExtension">
														</li>
													</value>
												</li>
											</operations>
										</match>
										<nomatch Class="PatchOperationSequence">
											<operations>
												<li Class="PatchOperationRemove">
													<xpath>Defs//PawnKindDef[
														defName="ei_Infantry_line" or 
														defName="ei_Infantry_reserve" or
														defName="ei_Skirmisher" or
														defName="ei_Officer"
														]</xpath>
												</li>
												<li Class="PatchOperationRemove">
													<xpath>
														Defs/FactionDef/pawnGroupMakers/li/*//ei_Infantry_line</xpath>
												</li>
												<li Class="PatchOperationRemove">
													<xpath>
														Defs/FactionDef/pawnGroupMakers/li/*//ei_Infantry_reserve</xpath>
												</li>
												<li Class="PatchOperationRemove">
													<xpath>
														Defs/FactionDef/pawnGroupMakers/li/*//ei_Skirmisher</xpath>
												</li>
												<li Class="PatchOperationRemove">
													<xpath>
														Defs/FactionDef/pawnGroupMakers/li/*//ei_Officer</xpath>
												</li>
											</operations>
										</nomatch>
									</li>

								</operations>
							</match>
						</li>
					</operations>
				</match>
			</li>

		</operations>
	</Operation>
</Patch>